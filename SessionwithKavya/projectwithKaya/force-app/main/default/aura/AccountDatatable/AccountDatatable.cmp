<aura:component implements="flexipage:availableForAllPageTypes" access="global" controller ="AccountList" >
    <aura:attribute name="Accounts" type="Account" />
    <aura:attribute name="Columns" type="List" />
    <aura:attribute name="showAccountTable" type="Boolean" default = "true"/>
    <aura:attribute name="showCreateAccount" type="Boolean" default = "false"/>
    <aura:handler name="init" value="{!this}" action="{!c.myAction}" />
    <lightning:card class="slds-p-around_xx-large cardcls" title="Account List using Aura" iconName="standard:account">
        <div class="slds-p-bottom_large slds-text-align_center">
        <lightning:button variant="brand" label="Create an Account" onclick="{! c.createAccount}" />
            </div>
	<lightning:datatable data="{! v.Accounts}" columns="{! v.Columns }" keyField="Id" hideCheckboxColumn="true" class="customtable"/>
        <aura:if isTrue="{!v.showCreateAccount}">
            <lightning:card>
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" 
         aria-modal="true" aria-describedby="modal-content-id-1"   
            class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.close }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Create an Account</h2>
                    </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
        <lightning:recordEditForm objectApiName="Account" onsuccess="{!c.handleSubmit}" >
            <lightning:inputField fieldName="Name" />
            <lightning:inputField fieldName="Need_Contact__c" />
            <lightning:button type="submit" name="Submit" label="Save" class="slds-m-top_medium"/>
        </lightning:recordEditForm>
                </div>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
                </lightning:card>
        </aura:if>
    </lightning:card>
</aura:component>